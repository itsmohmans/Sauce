{
  "manifest_version": 2,
  "name": "sauce",
  "description": "Get the technologies (sauce) used by a website.",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "sauce"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "sauce"
  },
  "permissions": ["<all_urls>", "tabs"]
}
